ZSH=$HOME/.oh-my-zsh
ZSH_THEME="gary_pure_mod"
COMPLETION_WAITING_DOTS="true"

plugins=(battery brew capistrano command-coloring eifion gem git gitignore git-extras git-flow heroku mosh osx rails rake ruby safe-paste themes tmuxinator vagrant zeus zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh
for f ($HOME/.zsh/*.zsh) {source $f}
for f ($HOME/.zsh/private/*.zsh) {source $f}

if [[ $IS_MAC -eq 1 ]]; then
  source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
  ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor)
fi

if [[ $IS_LINUX -eq 1 ]]; then
fi

if (( $+commands[doge] )) ; then
  doge
elif (( $+commands[cowsay] )); then
  uptime | cowsay -f stegosaurus
fi
echo ""

if (( $+commands[direnv] )) ; then
  eval "$(direnv hook zsh)"
fi

# zsh-bd
. $HOME/.zsh/plugins/bd/bd.zsh

function update_terminal_title() {
  print -Pn "\e]0;%n :: %~/ \a"
}

source ~/.fzf.zsh
