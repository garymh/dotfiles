ZSH=$HOME/.oh-my-zsh
ZSH_THEME="gary_pure_mod"
COMPLETION_WAITING_DOTS="true"

plugins=(zsh-syntax-highlighting battery brew capistrano command-coloring colored-man colorize eifion gem git gitignore git-extras git-flow heroku mosh osx pip rails rake rake-fast ruby themes tmuxinator vagrant)
# disabled: safe-paste

source $ZSH/oh-my-zsh.sh
for f ($HOME/.zsh/*.zsh) {source $f}
for f ($HOME/.zsh/private/*.zsh) {source $f}

ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor)

if (( $+commands[cowsay] )); then
  echo "OOOOOOOOOOOOH: $(uptime)" | cowsay -f $HOME/.zsh/plugins/cows/meeseeks.cow
else
  uptime
fi
echo ""

if (( $+commands[direnv] )) ; then
  eval "$(direnv hook zsh)"
fi

# zsh-bd
. $HOME/.zsh/plugins/bd/bd.zsh

function update_terminal_title() {
  print -Pn "\e]0;%n :: %~/ \a"
}

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

if [[ $IS_LINUX -eq 1 ]]; then
  source /etc/profile.d/rvm.sh
fi
