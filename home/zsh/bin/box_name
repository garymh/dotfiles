#!/bin/bash

if [[ -f ~/.box-name  ]]; then
  if grep -q STAGING "$HOME/.box-name"; then
    echo "\e[33mSTAGING!"
  elif grep -q PRODUCTION "$HOME/.box-name"; then
    echo "\e[31mPRODUCTION!"
  elif grep -q ORACLE "$HOME/.box-name"; then
    echo "\e[34mBATGIRL"
  else
    cat ~/.box-name
  fi
else
  hostname -s
fi
