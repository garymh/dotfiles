[include]
  path              = ~/.gitconfig.local
[core]
  excludesfile = ~/.gitignore_global
  whitespace        = space-before-tab,-indent-with-non-tab,trailing-space
  pager             = less -RM
  editor            = vim

  # Make `git rebase` safer on OS X
  # More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
  trustctime        = false

  # Prevent showing files whose names contain non-ASCII symbols as unversioned.
  # http://michael-kuehnel.de/git/2014/11/21/git-mac-osx-and-german-umlaute.html
  precomposeunicode = false

[alias]
  amend                                   = commit --amend
  branches                                = branch -a
  checkout-commit                         = "!sh -c 'git_checkout_commit'"
  checkout-something                      = "!sh -c 'git_checkout_something'"
  delete-local-branch                     = branch -D
  delete-local-reference-to-remote-branch = "!sh -c 'git branch -rd $1/$2' -"
  delete-remote-branch                    = "!sh -c 'git push $1 --delete $2' -"
  discard                                 = checkout --
  forgot-to-commit                        = difftool HEAD~1 HEAD
  explode                               = !git reset --hard HEAD && git clean -d -f
  precommit                               = diff --cached --diff-algorithm=minimal -w
  remotes                                 = remote -v
  s                                       = status -s
  stashes                                 = stash list
  tags                                    = tag -l
  uncommit                                = reset --mixed HEAD~
  unstage                                 = reset -q HEAD --
  up                                      = merge --ff-only
  update-submodules                       = submodule update --init --recursive
  ksdiff                                  = difftool
  combine-commits                         = "!sh -c 'git rebase -i HEAD$1'"

[push]
  default     = current
[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto
  ui          = true
[web]
  browser     = open
[help]
  autocorrect = 1
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool]
	prompt = false
[diff]
	tool = Kaleidoscope
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[gui]
	recentrepo = /Users/gmh/code/NUDAIS
[commit]
	gpgsign = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[user]
	name = Gary Holtz
	email = garymh@users.noreply.github.com
[includeIf "gitdir:~/code/xbox_api"]

