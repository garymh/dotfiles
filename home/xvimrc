nmap ,w :w<cr>
vnoremap L $
nmap L $
nmap H 0


map <C-p> :xccmd openQuickly<cr>
map ,l :xccmd showDocumentItemsMenu<cr>
map ,b :xccmd showPreviousFilesHistoryMenu<cr>

map ,A :xccmd jumpToNextCounterpart<cr>
map ,a :xccmd jumpToPreviousCounterpart<cr>

vnoremap > >gv
vnoremap < <gv

nnoremap D d$
nnoremap Y y$

nnoremap [<space> O<esc>
nnoremap ]<space> o<esc>

" nnoremap { :xccmd defaultJumpPrevShortcut
" nnoremap } :xccmd defaultJumpNextShortcut

set clipboard=unnamed
set relativenumber
set ignorecase
set smartcase
set nowrap
set wrapscan
set laststatus=0

nmap S i<CR><ESC>^m`gk:s/ +$//<CR>``

" Xcode Mappings {{{2
nmap gcc :xccmd commentAndUncommentCurrentLines<CR>
vmap gc :xccmd commentAndUncommentCurrentLines<CR>
" Navigation

nmap <space>n :nissue<CR>
nmap <space>p :pissue<CR>

" Show
nmap <space>F :xccmd showInFinder<CR>
nmap <space>D :xccmd showDeveloperDocumentation<CR>
nmap <space>d :xcmenucmd Quick Help for Selected Item<CR>

" Toggle Toolbars
nmap <space>h :xccmd toggleNavigatorsVisibility<CR>
nmap <space>j :xccmd toggleDebuggerVisibility<CR>
nmap <space>l :xccmd toggleUtilitiesVisibility<CR>
