export PATH=$PATH:~/bin
OS=$($(which uname))

if [[ $OS = 'Linux' ]]; then
  IS_LINUX=1

  export USER="$NETID"
  export rvmsudo_secure_path=1
  export DOTFILES="$HOME/dotfiles"
  export EDITOR='vim'
  export VISUAL='vim'
  alias gls="ls"
fi

if [[ $OS = 'Darwin' ]]; then
  IS_MAC=1

  export DOTFILES="$HOME/code/dotfiles"
  export EDITOR='nvim'
  export VISUAL='nvim'
  export OCI_DIR=/usr/local/lib
  export HOMEBREW_UPGRADE_CLEANUP="true"

fi

#   export GOPATH="$HOME/code/custom/go"
#   export NVIM_TUI_ENABLE_CURSOR_SHAPE=1
# export LC_ALL="en_US.UTF-8"
# export NLS_LANG="AMERICAN_AMERICA.WE8MSWIN1252"
export ZSH_PLUGINS_ALIAS_TIPS_EXCLUDES=":q eivm evimrc ezshrc _ gls"
export DOT_BASE_DIR=$DOTFILES
export HOME_DIR="$DOTFILES/home"
export LESS='-F -g -i -M -R -S -w -X -z-4'
