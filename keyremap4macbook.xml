<?xml version="1.0"?>
<root>
  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_SHELL_APPLESCRIPT_COMMENT</name>
    <url type="shell"><![CDATA[    osascript ~/Dropbox/Internal/Application\ Scripts/toggle\ comment.applescript    ]]></url>
  </vkopenurldef>
  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_SHELL_SAFARI_LINK</name>
    <url type="shell"><![CDATA[    osascript ~/Dropbox/Internal/Application\ Scripts/get_safari_link.scpt    ]]></url>
  </vkopenurldef>
  <appdef>
    <appname>SUBLIME</appname>
    <equal>com.sublimetext.3</equal>
  </appdef>
  <appdef>
    <appname>APPLESCRIPT</appname>
    <equal>com.apple.ScriptEditor2</equal>
  </appdef>
  <appdef>
    <appname>SHORTCAT</appname>
    <equal>com.sproutcube.Shortcat</equal>
  </appdef>
  <appdef>
    <appname>ITERM</appname>
    <equal>com.googlecode.iterm2</equal>
  </appdef>
  <appdef>
    <appname>TWEETBOT</appname>
    <equal>com.tapbots.TweetbotMac</equal>
  </appdef>
  <appdef>
    <appname>EVERNOTE</appname>
    <equal>com.evernote.Evernote</equal>
  </appdef>
  <appdef>
    <appname>SKYPE</appname>
    <equal>com.skype.skype</equal>
  </appdef>
  <appdef>
    <appname>FINDER</appname>
    <equal>com.apple.finder</equal>
  </appdef>
  <devicevendordef>
    <vendorname>GRIFFIN</vendorname>
    <vendorid>0x077d</vendorid>
  </devicevendordef>
  <deviceproductdef>
    <productname>POWERMATE</productname>
    <productid>0x0410</productid>
  </deviceproductdef>
  <item>
    <name>Gary's customizations</name>
    <item>
      <name>Fn key to F17 or Hyper</name>
      <appendix>(Fn + something = Hyper, Fn alone = F17)</appendix>
      <identifier>remap.fntof17</identifier>
      <autogen>--KeyOverlaidModifier--
      KeyCode::FN,
      KeyCode::COMMAND_L,
      ModifierFlag::OPTION_L | ModifierFlag::SHIFT_L | ModifierFlag::CONTROL_L,
      KeyCode::F17
    </autogen>
    </item>
    <item>
      <name>PowerMate Mute Button for Skype</name>
      <identifier>private.powermate</identifier>
      <device_only>DeviceVendor::GRIFFIN,DeviceProduct::POWERMATE</device_only>
      <only>SKYPE</only>
      <autogen>--PointingButtonToKey--
     PointingButton::LEFT, ModifierFlag::NONE,
     Option::KEYTOKEY_BEFORE_KEYDOWN, KeyCode::M, ModifierFlag::SHIFT_L | ModifierFlag::COMMAND_L, KeyCode::COMMAND_L,
     Option::KEYTOKEY_AFTER_KEYUP,    KeyCode::M, ModifierFlag::SHIFT_L | ModifierFlag::COMMAND_L, KeyCode::COMMAND_L,
   </autogen>
    </item>
    <item>
      <name>Left Control to F17 or Hyper (sometimes it's the bottom left on a proper keyboard)</name>
      <appendix>(Control + something = Hyper, Control alone = F17)</appendix>
      <identifier>remap.lcontroltof17</identifier>
      <autogen>--KeyOverlaidModifier--
    KeyCode::CONTROL_L,
    KeyCode::COMMAND_L,
    ModifierFlag::OPTION_L | ModifierFlag::SHIFT_L | ModifierFlag::CONTROL_L,
    KeyCode::F17
  </autogen>
    </item>
    <item>
      <name>Brightness controls to right side ⌘ + ⌥ + F1/F2</name>
      <identifier>remap.brightnessoverrides</identifier>
      <autogen>--KeyToConsumer-- KeyCode::F1, ModifierFlag::COMMAND_R | ModifierFlag::OPTION_R, ConsumerKeyCode::BRIGHTNESS_DOWN</autogen>
      <autogen>--KeyToConsumer-- KeyCode::F2, ModifierFlag::COMMAND_R | ModifierFlag::OPTION_R, ConsumerKeyCode::BRIGHTNESS_UP</autogen>
    </item>
    <item>
      <name>Symbolic link for Finder</name>
      <only>FINDER</only>
      <identifier>remap.symlink</identifier>
      <autogen>--KeyToKey-- KeyCode::L, VK_SHIFT | VK_COMMAND, KeyCode::Z, ModifierFlag::SHIFT_L | ModifierFlag::OPTION_L | ModifierFlag::COMMAND_L </autogen>
    </item>
    <item>
      <name>AppleScript Comment (⌘+/)</name>
      <only>APPLESCRIPT</only>
      <identifier>private.applescript</identifier>
      <autogen>--KeyToKey-- KeyCode::SLASH, VK_COMMAND, KeyCode::VK_OPEN_URL_SHELL_APPLESCRIPT_COMMENT,</autogen>
    </item>
    <item>
      <name>Copy Safari Window (⌘+ESC)</name>
      <identifier>private.safari_copy</identifier>
      <autogen>--KeyToKey-- KeyCode::ESCAPE, VK_COMMAND, KeyCode::VK_OPEN_URL_SHELL_SAFARI_LINK,</autogen>
    </item>
    <item>
      <name>F16 (Remapped from CAPSLOCK) to F16 or Control</name>
      <appendix>(F16 + something = Control, F16 alone = F16)</appendix>
      <identifier>private.f162f16_escape</identifier>
      <autogen>--KeyOverlaidModifier--
    KeyCode::F16,
    KeyCode::CONTROL_L,
    KeyCode::F16
  </autogen>
    </item>
    <item>
      <name>Skype Mute Button</name>
      <identifier>remap.skypethinger</identifier>
      <only>SKYPE</only>
      <autogen>__KeyToKey__ KeyCode::F2, KeyCode::VK_NONE,
    Option::KEYTOKEY_BEFORE_KEYDOWN, KeyCode::M, ModifierFlag::SHIFT_L | ModifierFlag::COMMAND_L, KeyCode::COMMAND_L,
    Option::KEYTOKEY_AFTER_KEYUP,    KeyCode::M, ModifierFlag::SHIFT_L | ModifierFlag::COMMAND_L, KeyCode::COMMAND_L,
  </autogen>
    </item>
    <item>
      <name>Application Key to F18</name>
      <identifier>remap.pc_application2f18</identifier>
      <autogen>--KeyToKey-- KeyCode::PC_APPLICATION, KeyCode::F18</autogen>
    </item>
    <item>
      <name>Simultaneous Key Presses [;+'] to PC Application Key</name>
      <identifier>remap.simultaneouskeypresses_semiquote2pc_application</identifier>
      <autogen>--SimultaneousKeyPresses-- KeyCode::SEMICOLON, KeyCode::QUOTE, KeyCode::PC_APPLICATION, SimultaneousKeyPresses::Option::RAW</autogen>
    </item>
  </item>
  <item>
    <name>Emacs Stuff</name>
    <item>
      <name>Special CTRL Remappings for Arrow Keys</name>
      <appendix>CTRL + J =  ⃪, CTRL + I =  ꜛ, CTRL + L =  →, CTRL + K =  ꜜ </appendix>
      <not>SHORTCAT</not>
      <identifier>remap.ctrljklitoarrows</identifier>
      <autogen>--KeyToKey-- KeyCode::I, VK_OPTION, KeyCode::CURSOR_UP, ModifierFlag::OPTION_L</autogen>
      <autogen>--KeyToKey-- KeyCode::K, VK_OPTION, KeyCode::CURSOR_DOWN, ModifierFlag::OPTION_L</autogen>
      <autogen>--KeyToKey-- KeyCode::J, VK_OPTION, KeyCode::CURSOR_LEFT, ModifierFlag::OPTION_L</autogen>
      <autogen>--KeyToKey-- KeyCode::L, VK_OPTION, KeyCode::CURSOR_RIGHT, ModifierFlag::OPTION_L</autogen>
    </item>
    <item>
      <name>Special OPTION Remappings for Arrow Keys</name>
      <appendix>⌥ + J =  ⃪, ⌥ + I =  ꜛ, ⌥ + L =  →, ⌥ + K =  ꜜ </appendix>
      <identifier>remap.otpjklitoarrows</identifier>
      <autogen>--KeyToKey-- KeyCode::I, VK_CONTROL, KeyCode::CURSOR_UP</autogen>
      <autogen>--KeyToKey-- KeyCode::K, VK_CONTROL, KeyCode::CURSOR_DOWN</autogen>
      <autogen>--KeyToKey-- KeyCode::J, VK_CONTROL, KeyCode::CURSOR_LEFT</autogen>
      <autogen>--KeyToKey-- KeyCode::L, VK_CONTROL, KeyCode::CURSOR_RIGHT</autogen>
    </item>
    <item>
      <name>ErgoEmacs Keybindings</name>
      <not>SHORTCAT</not>
      <identifier>remap.ergoemacs</identifier>
      <autogen>--KeyToKey-- KeyCode::U, VK_CONTROL, KeyCode::CURSOR_LEFT, ModifierFlag::OPTION_L</autogen>
      <autogen>--KeyToKey-- KeyCode::O, VK_CONTROL, KeyCode::CURSOR_RIGHT, ModifierFlag::OPTION_L</autogen>
      <autogen>--KeyToKey-- KeyCode::D, VK_CONTROL, KeyCode::DELETE</autogen>
      <autogen>--KeyToKey-- KeyCode::F, VK_CONTROL, KeyCode::FORWARD_DELETE</autogen>
      <autogen>--KeyToKey-- KeyCode::E, VK_CONTROL, KeyCode::DELETE, ModifierFlag::OPTION_L</autogen>
      <autogen>--KeyToKey-- KeyCode::R, VK_CONTROL, KeyCode::FORWARD_DELETE, ModifierFlag::OPTION_L</autogen>
    </item>
  </item>
</root>
