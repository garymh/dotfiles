
# Setting the font (default is `Menlo`):
defaults write org.n8gray.QLColorCode font "Input Mono"

# Setting the font size (default is `10`):
defaults write org.n8gray.QLColorCode fontSizePoints 12

# http://www.andre-simon.de/dokuwiki/doku.php?id=theme_examples
# there are themes!!!
defaults write org.n8gray.QLColorCode hlTheme darkblue
